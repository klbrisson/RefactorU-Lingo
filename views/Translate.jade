extends layout

block content
	h1 Translate
	div.container
		form(method="post" action="/translation")
			div.row
				div.form-group.col-xs-6
					label(for="start-lang") From:
					select.form-control#start-lang(name="start-lang")
						for lang in langs 
							option(data-code='#{lang.code}')= lang.name
				div.form-group.col-xs-6
					label(for="end-lang") To:
					select.form-control#end-lang(name="end-lang")
						for lang in langs 
							option(data-code='#{lang.code}')= lang.name
			div.form-group.row
				input.form-control#translate-input(name="translate-input" placeholder="What To Translate")
			div.form-group.row
				button.btn.btn-default#translate-btn(type="Submit") Translate!
		div.row.template.translation
			div.col-xs-6
				h5.input-lang
				p.translate-input
			div.col-xs-6
				h5.output-lang
				p.translate-output

		div.container#translation-container
block scripts
	script(src="/js/translate.js")